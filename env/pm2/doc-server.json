{
	"apps" : [
		{
			"name"             : "doc-server",
			"script"           : "/lib/node_modules/livereloadx/bin/livereloadx.js",
			"args"             : [
				"--static",
				"-p", "3550",
				"--include", "*.html",
				"--exclude", "*.png",
				"--exclude", "*.css",
				"--exclude", "*.js",
				"./docs/html"
			],
			"watch"            : false,
			"exec_interpreter" : "node",
			"cwd"              : "/project"
		}
	]
}
